<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import com.inventory.controls.TextFieldLimited?>
<GridPane fx:controller="com.inventory.modifypart.AddModifyPartController"
          fx:id="main"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="525.0" prefWidth="465.0"
          alignment="BASELINE_LEFT"
          hgap="20" vgap="10"
          gridLinesVisible="false"

>
    <padding>
        <Insets top="30" left="40" />
    </padding>
    <Label fx:id="addModLabel"
           text="Add/Modify Part"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0">
        <font>
            <Font name="Calibri bold"/>
        </font>
    </Label>
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="BASELINE_LEFT">
        <RadioButton fx:id="inHouse" selected="true" onAction="#changeVarLabel">
            <toggleGroup>
                <ToggleGroup  fx:id="partType"/>
            </toggleGroup>
        </RadioButton>
        <Label text="In-House">
            <padding>
                <Insets left="5"/>
            </padding>
            <font>
                <Font name="Calibri"/>
            </font>
        </Label>
    </HBox>
    <HBox GridPane.rowIndex="0"
          GridPane.columnIndex="2"
          alignment="BASELINE_LEFT">
        <RadioButton fx:id="outsourced" onAction="#changeVarLabel" >
            <toggleGroup>
                <fx:reference  source="partType"/>
            </toggleGroup>
        </RadioButton>
        <Label text="Outsourced">
            <padding>
                <Insets left="5"/>
            </padding>
            <font>
                <Font name="Calibri"/>
            </font>
        </Label>
    </HBox>
    <Label text="ID"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <Label text="Name"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <Label text="Inventory"
           GridPane.columnIndex="0"
           GridPane.rowIndex="5">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <Label text="Price/Cost"
           GridPane.columnIndex="0"
           GridPane.rowIndex="6">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <Label text="Max"
           GridPane.columnIndex="0"
           GridPane.rowIndex="7">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <Label text="Machine ID"
           fx:id="varLabel"
           GridPane.columnIndex="0"
           GridPane.rowIndex="8">
        <padding>
            <Insets left="10"/>
        </padding>
        <font>
            <Font name="Calibri"/>
        </font>
    </Label>
    <TextFieldLimited fx:id="partId"
               disable="true"
               GridPane.columnIndex="1"
               GridPane.rowIndex="3"
               prefWidth="115"
               alignment="BASELINE_LEFT"
    />
    <TextFieldLimited fx:id="partName"
               onKeyReleased="#validator"
               promptText="Part Name..."
               GridPane.columnIndex="1"
               GridPane.rowIndex="4"
               prefWidth="115"
               alignment="BASELINE_LEFT"
    />
    <TextFieldLimited fx:id="inventoryCount"
               onKeyReleased="#validator"
               promptText="Inventory Count..."
               GridPane.columnIndex="1"
               GridPane.rowIndex="5"
               prefWidth="115"
               alignment="BASELINE_LEFT"
    />
    <TextFieldLimited fx:id="partPrice"
               onKeyReleased="#validator"
               promptText="Price..."
               GridPane.columnIndex="1"
               GridPane.rowIndex="6"
               prefWidth="115"
               alignment="BASELINE_LEFT"
    />
    <TextFieldLimited fx:id="maximumInventory"
               onKeyReleased="#validator"
               promptText="Max Inventory..."
               GridPane.columnIndex="1"
               GridPane.rowIndex="7"
               prefWidth="115"
               alignment="BASELINE_LEFT"
    />
    <GridPane GridPane.columnIndex="2"
              GridPane.rowIndex="7"
              alignment="BASELINE_LEFT"
              hgap="15"
    >
        <Label text="Min"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0"
        >
            <padding>
                <Insets left="10"/>
            </padding>
            <font>
                <Font name="Calibri"/>
            </font>
        </Label>
        <TextFieldLimited fx:id="minimumInventory"
                   onKeyReleased="#validator"
                   promptText="Minimum Inventory"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"
                   prefWidth="115"
                   alignment="BASELINE_LEFT"
        />
    </GridPane>
    <TextFieldLimited fx:id="variableTextField"
               onKeyReleased="#validator"
               promptText="Machine ID/Company Name..."
               GridPane.columnIndex="1"
               GridPane.rowIndex="8"
               prefWidth="115"
               alignment="BASELINE_LEFT"

    />



    <GridPane GridPane.columnIndex="2"
              GridPane.rowIndex="9"
              alignment="BASELINE_LEFT"
              hgap="10"
    >
        <Button fx:id="saveButton"
                onAction="#addPart"
                text="Save"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"
        />
        <Button fx:id="cancelButton"
                onAction="#exit"
                text="Cancel"
                cancelButton="true"
                GridPane.rowIndex="0"
                GridPane.columnIndex="1"
        />
    </GridPane>
</GridPane>
